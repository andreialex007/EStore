@using EStore.BL.Utils
@model EStore.BL.Models.Product.ProductFeedbackItem

<tr>
    <td class="id-column">@Model.Id</td>
    <td>
        <div class="overflow-wrapper" >
            @Model.Pluses
        </div>
    </td>
    <td>
        <div class="overflow-wrapper">
            @Model.Minuses
        </div>
    </td>
    <td>
        <div class="overflow-wrapper">
            @Model.Comment
        </div>
    </td>
    <td>
        <div class="overflow-wrapper">
            @Model.Stars
        </div>
    </td>
    <td>
        <div class="overflow-wrapper">
            @Model.UserName
        </div>
    </td>
    <td class="actions">
        <a tabindex="-1" title="delete" class="delete btn default btn-xs red" href="javascript:;">
            <i class="fa fa-times"></i>
            Удалить
        </a>
    </td>
</tr>
