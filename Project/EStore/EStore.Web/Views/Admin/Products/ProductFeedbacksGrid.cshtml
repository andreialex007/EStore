@model List<EStore.BL.Models.Product.ProductFeedbackItem>
    

<div class="product-feedbacks-grid">
    <div class="row">
        <div class="col-md-12">
            <div class="table-toolbar">
                <div class="row">
                    <div class="col-md-12">
                        <span class="btn btn-info add">
                            <i class="fa fa-plus"></i>
                            Добавить
                        </span>
                    </div>
                </div>
            </div>
            <table class="table table-striped table-hover table-bordered table-condensed table-equal-columns-id-actions">
                <thead>
                    <tr>
                        <th class="id-column">Id</th>
                        <th>Плюсы</th>
                        <th>Минусы</th>
                        <th>Комментарий</th>
                        <th>Звезды</th>
                        <th>Автор</th>
                        <th class="actions">Действия</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        @Html.Partial("~/Views/Admin/Products/ProductFeedbacksGridRow.cshtml", item)
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
