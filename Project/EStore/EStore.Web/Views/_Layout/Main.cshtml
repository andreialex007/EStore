@using System.Diagnostics
@using EStore.BL.Services
@using Microsoft.AspNet.Identity
<!DOCTYPE html>
<!--[if IE 8]> <html lang="en" class="ie8 no-js"> <![endif]-->
<!--[if IE 9]> <html lang="en" class="ie9 no-js"> <![endif]-->
<!--[if !IE]><!-->
<html lang="en" class="no-js">
<!--<![endif]-->
<!-- BEGIN HEAD -->
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - EStore</title>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta content="width=device-width, initial-scale=1" name="viewport" />
    <meta content="" name="description" />
    <meta content="" name="author" />

    <!-- styles -->
    <link href="http://fonts.googleapis.com/css?family=Open+Sans:400,300,600,700&subset=all" rel="stylesheet" type="text/css" />

    @Styles.Render("~/styles/metronic-mandatory")
    @Styles.Render("~/styles/metronic-page-level")
    @Styles.Render("~/styles/metronic-public-theme")
    @Styles.Render("~/PublicContent-css")
    @RenderSection("Styles", false)
    <link href="/Content/assets/global/plugins/select2/select2.css" rel="stylesheet" type="text/css" />
    <link href="/Content/assets/global/plugins/select2/select2-bootstrap3.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/assets/global/plugins/bootstrap-datetimepicker-0.0.11/css/bootstrap-datetimepicker.css" rel="stylesheet" />
    <!-- scripts -->
    @Scripts.Render("~/javascript/metronic-core-scripts")
    @Scripts.Render("~/javascript/metronic-public-page-level-scripts")
    <script src="/Content/assets/global/plugins/select2/select2.min.js" type="text/javascript"></script>
    <script src="/Content/assets/global/plugins/moment.js"></script>
    <script src="/Content/assets/global/plugins/moment-ru-locale.js"></script>
    <script src="/Content/assets/global/plugins/bootstrap-datetimepicker-0.0.11/js/bootstrap-datetimepicker.min.js"></script>
    <script src="~/Content/assets/global/plugins/jquery.numeric.js"></script>
    <script>
        $(function () {
            Metronic.init();
            Layout.init();
            Demo.init();
        });
    </script>
    <script src="~/Scripts/common/custom.ui.toastr.js"></script>
    <script src="~/Scripts/common/utils.js"></script>
    <script src="~/Scripts/common/dialogs.js"></script>
    @RenderSection("Scripts", false)
</head>
<!-- DOC: Apply "page-header-fixed-mobile" and "page-footer-fixed-mobile" class to body element to force fixed header or footer in mobile devices -->
<!-- DOC: Apply "page-sidebar-closed" class to the body and "page-sidebar-menu-closed" class to the sidebar menu element to hide the sidebar by default -->
<!-- DOC: Apply "page-sidebar-hide" class to the body to make the sidebar completely hidden on toggle -->
<!-- DOC: Apply "page-sidebar-closed-hide-logo" class to the body element to make the logo hidden on sidebar toggle -->
<!-- DOC: Apply "page-sidebar-hide" class to body element to completely hide the sidebar on sidebar toggle -->
<!-- DOC: Apply "page-sidebar-fixed" class to have fixed sidebar -->
<!-- DOC: Apply "page-footer-fixed" class to the body element to have fixed footer -->
<!-- DOC: Apply "page-sidebar-reversed" class to put the sidebar on the right side -->
<!-- DOC: Apply "page-full-width" class to the body element to have full width page without the sidebar menu -->
<body class="page-boxed page-header-fixed page-sidebar-closed-hide-logo page-container-bg-solid page-sidebar-closed-hide-logo ">
    <!-- BEGIN HEADER -->
    <div class="page-header">
        <!-- BEGIN HEADER TOP -->
        <div class="page-header-top">
            <div class="container">
                <!-- BEGIN LOGO -->
                <div class="page-logo">
                    <a href="/">
                        <img src="/Content/Images/i-device-logo.png" alt="logo" class="logo-default">
                    </a>
                </div>
                <!-- END LOGO -->
                <!-- BEGIN RESPONSIVE MENU TOGGLER -->
                <a href="javascript:;" class="menu-toggler"></a>
                <!-- END RESPONSIVE MENU TOGGLER -->
                <!-- BEGIN TOP NAVIGATION MENU -->
                <div class="top-menu">
                    <ul class="nav navbar-nav pull-right">
                        <!-- BEGIN TODO DROPDOWN -->
                        <li>
                            @Html.Partial("~/Views/_Common/ShoppingCartBlock.cshtml")
                        </li>
                        <!-- END TODO DROPDOWN -->
                        <li class="droddown dropdown-separator">
                            <span class="separator"></span>
                        </li>
                        <!-- BEGIN USER LOGIN DROPDOWN -->
                        <li class="dropdown dropdown-user dropdown-dark login-register-block">
                            <div class="dropdown-toggle" data-toggle="dropdown" data-hover="dropdown" data-close-others="true">
                                <div><a href="#" class="login-link">Вход</a></div>
                                <div><a href="#" class="register-link">Регистрация</a></div>
                            </div>
                        </li>
                        <!-- END USER LOGIN DROPDOWN -->
                    </ul>
                </div>
                <!-- END TOP NAVIGATION MENU -->
            </div>
        </div>
        <!-- END HEADER TOP -->
        <!-- BEGIN HEADER MENU -->
        <div class="page-header-menu" style="display: block;">
            <div class="container">
                <!-- BEGIN HEADER SEARCH BOX -->
                <form class="search-form" action="extra_search.html" method="GET">
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Поиск по сайту" name="query" vk_147e9="subscribed">
                        <span class="input-group-btn">
                            <a href="javascript:;" class="btn submit"><i class="icon-magnifier"></i></a>
                        </span>
                    </div>
                </form>
                <!-- END HEADER SEARCH BOX -->
                <!-- BEGIN MEGA MENU -->
                <!-- DOC: Apply "hor-menu-light" class after the "hor-menu" class below to have a horizontal menu with white background -->
                <!-- DOC: Remove data-hover="dropdown" and data-close-others="true" attributes below to disable the dropdown opening on mouse hover -->
                <div class="hor-menu ">
                    <ul class="nav navbar-nav">
                        <li class="@(RazorHelpers.IsActiveMainMenu("/",ViewContext))">
                            <a href="/">Главная</a>
                        </li>
                        <li class="menu-dropdown mega-menu-dropdown mega-menu-full @(RazorHelpers.IsActiveMainMenu("catalog",ViewContext))">
                            <a data-hover="megamenu-dropdown" href="/catalog" class="dropdown-toggle">
                                Каталог <i class="fa fa-angle-down"></i>
                            </a>
                            <ul class="dropdown-menu">
                                <li>
                                    <div class="mega-menu-content">
                                        <div class="row">
                                            @Html.Action("Menu", "Catalog")
                                        </div>
                                    </div>
                                </li>
                            </ul>
                        </li>
                        <li class="menu-dropdown @(RazorHelpers.IsActiveMainMenu("delivery",ViewContext))">
                            <a href="/delivery" class="tooltips" data-container="body" data-placement="bottom" data-html="true" data-original-title="Доставка">
                                Доставка
                            </a>
                        </li>
                        <li class="menu-dropdown @(RazorHelpers.IsActiveMainMenu("guarantee",ViewContext))">
                            <a href="/guarantee" class="tooltips" data-container="body" data-placement="bottom" data-html="true" data-original-title="Гарантия">
                                Гарантия
                            </a>
                        </li>
                        <li class="menu-dropdown @(RazorHelpers.IsActiveMainMenu("contacts",ViewContext))">
                            <a href="/contacts" class="tooltips" data-container="body" data-placement="bottom" data-html="true" data-original-title="Контакты">
                                Контакты
                            </a>
                        </li>
                    </ul>
                </div>
                <!-- END MEGA MENU -->
            </div>
        </div>
        <!-- END HEADER MENU -->
    </div>
    <!-- END HEADER -->
    <!-- BEGIN PAGE CONTAINER -->
    <div class="page-container">

        <!-- BEGIN PAGE HEAD -->
        <div class="page-head">
            <div class="container">
                <!-- BEGIN PAGE TITLE -->
                <div class="page-title">
                    <h1>
                        <span>@(ViewBag.PageTitle)</span>
                        <small>@(ViewBag.PageSmallTitle)</small>
                    </h1>
                </div>
                <!-- END PAGE TITLE -->
            </div>
        </div>
        <!-- END PAGE HEAD -->
        <!-- BEGIN PAGE CONTENT -->
        <div class="page-content" style="min-height: 614px;">
            <div class="container">
                @RenderBody()
            </div>
        </div>
        <!-- END PAGE CONTENT -->

    </div>
    <!-- END PAGE CONTAINER -->
    <!-- BEGIN PRE-FOOTER -->
    <div class="page-prefooter">
        <div class="container">

            <div class="col-md-3 col-sm-6 col-xs-12 footer-block">
                <h2>I-Device</h2>
                <p>
                    Интернет магазин техники - лучшие устройства по лучшим ценам
                </p>
            </div>
            <div class="col-md-3 col-sm-6 col-xs-12 footer-block">
                <h2>Поделиться</h2>
                <div class="share-block">
                    <script type="text/javascript" src="//yastatic.net/es5-shims/0.0.2/es5-shims.min.js" charset="utf-8"></script>
                    <script type="text/javascript" src="//yastatic.net/share2/share.js" charset="utf-8"></script>
                    <div class="ya-share2" data-services="vkontakte,facebook,odnoklassniki,moimir,gplus,twitter,linkedin,lj,whatsapp"></div>
                </div>
            </div>
            <div class="col-md-3 col-sm-6 col-xs-12 footer-block">
                <h2>Контакты</h2>
                <address class="margin-bottom-40">
                    Телефон: <gisphone class="_gis-phone-highlight-wrap js_gis-phone-highlight-wrap-f13f78da51155af557345cd25420e28a _gis-phone-highlight-phone-wrap" data-ph-parsed="true">800 123 3456</gisphone><br>
                    Почта: <a href="mailto:info@metronic.com">info@metronic.com</a>
                </address>
            </div>
            <div class="col-md-3 col-sm-6 col-xs-12 footer-block">
                <h2>Адрес</h2>
                <address class="margin-bottom-40">
                    Россия, г. Краснодар, ул Красная 10
                </address>
            </div>
        </div>
    </div>

    <!-- END PRE-FOOTER -->
    <!-- BEGIN FOOTER -->
    <div class="page-footer">
        <div class="container">
            2016 © I-DEVICE
        </div>
    </div>
    <div class="scroll-to-top" style="display: none;">
        <i class="icon-arrow-up"></i>
    </div>
    <!-- END FOOTER -->
    <!-- END BODY -->
    <div class="_gis-font-loader"></div>
</body>
</html>
