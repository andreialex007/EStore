@using EStore.BL.Models.SupplierInvoice
@model List<EStore.BL.Models.SupplierInvoice.SupplierInvoicePositionItem>

<div class="supplier-invoice-positions-grid inline-edit-grid">
    <div class="row">
        <div class="col-md-12">
            <div class="table-toolbar">
                <div class="row">
                    <div class="col-md-6">
                        <div class="btn-group">
                            <a href="javascript:;" class="btn green add">
                                Добавить <i class="fa fa-plus"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <table class="table table-striped table-hover table-bordered table-condensed ">
                <thead>
                    <tr>
                        <th class="id-column">Id</th>
                        <th>Товар</th>
                        <th>Количество</th>
                        <th>Цена, р.</th>
                        <th>Всего, р.</th>
                        <th>Примечания</th>
                        <th class="actions">Действия</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        @Html.Partial("SupplierInvoices/SupplierInvoicePositionsGridRow", item)
                    }
                </tbody>
            </table>
        </div>
    </div>
    <script class="new-item" type="text/html">
        @Html.Partial("SupplierInvoices/SupplierInvoicePositionsGridRow", new SupplierInvoicePositionItem { Id = 0 })
    </script>
</div>
