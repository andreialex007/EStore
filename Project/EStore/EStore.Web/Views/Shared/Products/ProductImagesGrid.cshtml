@model List<EStore.BL.Models.Product.FileItem>

<div class="common-files-grid">
    <div class="row">
        <div class="col-md-12">
            <div class="table-toolbar">
                <div class="row">
                    <div class="col-md-12">
                        <span class="btn btn-warning upload-button fileinput-button">
                            <i class="fa fa-upload"></i>
                            <span class="uploading-button-text">Загрузить</span>
                            <input type="file" multiple name="files" accept="image/*" class="file-upload-input">
                        </span>

                        <span class="btn btn-info find-images-button" >
                            <i class="fa fa-search"></i>
                            Найти
                        </span>
                    </div>
                </div>
            </div>
            <table class="table table-striped table-hover table-bordered table-condensed table-equal-columns-id-actions">
                <thead>
                    <tr>
                        <th class="id-column">Id</th>
                        <th class="file-name">Имя файла</th>
                        <th>Описание</th>
                        <th class="actions">Действия</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        @Html.Partial("Files/FilesGridRow", item)
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

