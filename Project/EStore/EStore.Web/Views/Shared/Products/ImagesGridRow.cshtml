@model EStore.BL.Models.Product.ProductImageItem

<tr>
    <td>@Model.Id</td>
    <td>
        <a tabindex="-1"  target="_blank" class="image-link-item" href="@Model.Path">@Model.Name</a>
    </td>
    <td>
        <input type="text" placeholder="Введие описание файла" class="form-control input-sm" value="@Model.Description" />
    </td>
    <td class="actions">
        <a tabindex="-1" title="delete" class="delete btn default btn-xs red" href="javascript:;">
            <i class="fa fa-times"></i>
            Удалить
        </a>
    </td>
</tr>
