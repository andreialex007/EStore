@using EStore.BL.Utils
@model EStore.BL.Models.Product.FileItem

<tr>
    <td>@Model.Id</td>
    <td><input type="radio" @((Model.IsChecked ? "checked='checked'": "")) name="is-main" value="@(Model.Id)"/></td>
    <td>
        <a tabindex="-1" target="_blank"
           class="@((Model.Path.HasImageExtension() ? "image-link-item" : "file-link-item"))"
           href="@Model.Path">
            @Model.Name
        </a>
    </td>
    <td>
        <input type="text"
               placeholder="Введие описание файла"
               class="form-control input-sm @((Model.Path.HasImageExtension() ? "image-description-input" : "file-description-input"))"
               value="@Model.Description"/>
    </td>
    <td class="actions">
        <a tabindex="-1" title="delete" class="delete btn default btn-xs red" href="javascript:;">
            <i class="fa fa-times"></i>
            Удалить
        </a>
    </td>
</tr>
