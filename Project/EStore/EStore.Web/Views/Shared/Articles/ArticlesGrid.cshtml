@model List<EStore.BL.Models.ArticleItem>

<div class="articles-grid">
    <div class="row">
        <div class="col-md-12">
            @Html.Partial("_Common/AddNewButton")
            <table class="table table-striped table-hover table-bordered table-condensed">
                <thead>
                    <tr>
                        <th class="id-column">Id</th>
                        <th>Заголовок</th>
                        <th>Дата</th>
                        <th class="actions">Действия</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Title</td>
                            <td>@(item.Date.Value.ToString(""))</td>
                            <td>
                                @Html.Partial("_Common/EditDeleteTableActions")
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
