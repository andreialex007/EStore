    <!-- custom scripts -->
    <script src="~/Scripts/common/ajax-grid-base.js"></script>
    <script src="~/Scripts/products/products-grid.js"></script>
}






<script type="text/javascript">
    $(function () {
        window.main = function () {

            var self = {};
            self.productsGrid = null;

            self.init = function () {
                self.productsGrid = new ProductsGrid();
                self.productsGrid.onSelect = function (data) {
                    alert(data.Name + " Выбран");
                }
            }

            self.init();

            return self;

        }();
    })
</script>

@RazorHelpers.ItemPicker(Html.Partial("Products/ProductsGrid"), "products-modal")